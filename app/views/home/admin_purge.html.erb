<% provide :title, 'Purge Old Items' %>

<h1><%= yield :title %></h1>
<div style="width: 100%;">
  <%= form_with(url: purge_items_path, local: true) do |form| %>

    <fieldset>
      <legend>Enter date (all items found before this date will be deleted)</legend>
      <div class="form-group required" style="padding-top: 8px; padding-bottom: 8px;">
      <%= form.label(:purge_date, 'Purge date:', class: 'control-label') %>
      <%= form.date_field(:purge_date, required: true, aria: { required: true }) %>
      </div>
    </fieldset>

    <div>
      <label for="updated_by">Updated by:</label>
      <input id="updated_by" type="text" value="<%= current_user.user_name %>" readonly style="pointer-events: none;">
    </div>

    <div>
      <label for="updated_at">Updated at:</label>
      <input id="updated_at" type="text" value="<%= Time.current.strftime('%B %e, %Y at %I:%M %P') %>" readonly style="pointer-events: none;">
    </div>

    <div class="btn-group" role="group" style="padding-top: 8px; padding-bottom: 8px;">
    <%= form.submit('Purge items', class: "btn btn-primary") %>
    </div>
  <% end %>
</div>
