<% provide :title, 'Add/Edit Item Types' %>

<h1><%= yield :title %></h1>
<p style="color: #ee0000">* Required</p>
<div class="mb-4 form-group">
  <h2>Add a new Item Type</h2>
  <%= form_with(url: item_type_insert_path, local: true) do |form| %>
    <%= form.label(:type_name, 'Item type name:') %> <span style="color: #ee0000"> * </span>
    <%= form.text_field(:type_name, placeholder: 'Electronics', required: true) %>

    <div>
      <div class="btn-group" role="group">
        <input type="submit" name="commit" value="Add item type" class="btn btn-primary">
      </div>
    </div>
  <% end %>
</div>

<h2>Active Item Types</h2>
<table class="table mt-5">
  <!-- the header row -->
  <thead class="thead-light">
  <tr>
    <th scope="col">Actions</th>
    <th scope="col">Item type name:</th>
  </tr>
  </thead>
  <!-- Layout all those beautiful requests -->
  <tbody>
  <% @active_item_types.each do |item_type| %>
    <tr>
      <td>
        <%= link_to 'Deactivate', toggle_item_type_status_path(item_type) %>
        <%= link_to 'Edit', edit_item_type_path(item_type.id) %>
      </td>
      <td><%= item_type.type_name.titleize %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h2>Deactivated Item Types</h2>
<table class="table mt-5">
  <!-- the header row -->
  <thead class="thead-light">
  <tr>
    <th scope="col">Actions</th>
    <th scope="col">Item type name</th>
  </tr>
  </thead>
  <!-- Layout all those beautiful requests -->
  <tbody>
  <% @inactive_item_types.each do |item_type| %>
    <tr>
      <td>
        <%= link_to 'Activate', toggle_item_type_status_path(item_type) %>
        <%= link_to 'Edit', edit_item_type_path(item_type.id) %>
      </td>
      <td><%= item_type.type_name.titleize %></td>
    </tr>
  <% end %>
  </tbody>
</table>
