<%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
<% if user_level_admin? %>
<div class="mb-4 form-group">
    <h1>Add a new Item Type</h1>
    <%= form_tag("itemType_insert", method: "post") do %>
    <%= label_tag(:type_name, "item name") %>
    <%=text_field_tag :type_name, nil, placeholder: '' %>

    <%= label_tag(:type_description, "item type description") %>

    <%= submit_tag("Add item Type") %>
<% end %>
</div>

<h2>Active Item Types</h2>
<table class="table mt-5">
    <!-- the header row -->
    <thead class="thead-light">
        <tr>
            <th scope="col">Actions</th>
            <th scope="col">Item Type Name</th>
        </tr>
    </thead>
    <!-- Layout all those beautiful requests -->
    <tbody>
        <% @actived_item_types.each do |item_type| %>
        <tr>
            <td>
                <%= link_to 'Deactivate', item_type_path(item_type)+"/change_status"%>
                <%= link_to 'Edit', edit_item_type_path(item_type.id) %>
            </td>
            <td><%= item_type.type_name %></td>
            </tr>
        <% end %>
        </tbody>
    </table>


<h2>Deactivated Item Types</h2>
<table class="table mt-5">
    <!-- the header row -->
    <thead class="thead-light">
        <tr>
            <th scope="col">Actions</th>
            <th scope="col">Item Type Name</th>
        </tr>
    </thead>
    <!-- Layout all those beautiful requests -->
    <tbody>
        <% @deactivated_item_types.each do |item_type| %>
        <tr>
            <td>
                <%= link_to 'Activate', item_type_path(item_type)+"/change_status"%>
                <%= link_to 'Edit', edit_item_type_path(item_type.id) %>
            </td>
            <td><%= item_type.type_name %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% end %>