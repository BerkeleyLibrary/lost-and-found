
		<div class="addit">&nbsp;</div>
		<h1>Items list</h1>
			<table class="item-display">
				<tr>
					<th>Actions</th>
					<th>Item ID</th>
					<th>Date</th>
					<th>Time</th>
					<th>Found by</th>
					<th>Found at</th>
					<th>Type of item</th>
					<th>Item description</th>
				</tr>
				<% @items.each do |item| %>
				<tr>
					<td>
						<%= button_to "Delete", "delete_item", class:"btn btn-default", style:"",  remote: true, params: { id: item.id } %>
					</td>
					<td><%= item.itemDate %></td>
					<td><%= item.itemFoundAt %></td>
					<td><%= item.itemFoundBy %></td>
					<td><%= item.itemLocation || 'none' %></td>
					<td><%= item.itemType || 'No type' %></td>
					<td><%= item.itemDescription %></td>
				</tr>
				<% end %>
			</table>
