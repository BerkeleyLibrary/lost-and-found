
<%= stylesheet_link_tag 'forms', media: 'all', 'data-turbolinks-track': 'reload' %>
<% if user_level_staff? %>
<h1>Add a new lost item to the collection</h1>

<div class="new_model_container">
    <%= form_tag("item_insert", method: "post", multipart: true) do %>

    <%= label_tag(:itemType, "item type:") %>
    <%= select_tag(:itemType, options_for_select(@item_type_layout)) %>

    <%= label_tag(:itemDescription, "Describe the item") %>
    <%=text_field_tag :itemDescription, nil, placeholder: 'item description...'%>

    <%= label_tag(:itemLocation, "location:") %>
    <%= select_tag(:itemLocation, options_for_select(@locations_layout)) %>

    <%= label_tag(:itemFoundBy, "Found by") %>
    <%=text_field_tag :itemFoundBy, nil, placeholder: 'Finders name'%>

    <%= label_tag(:itemFoundAt, "Time found") %>
    <%= time_field_tag(:itemFoundAt, :itemFoundAt) %>

    <%= label_tag(:itemDate, "Date found") %>
    <%= date_field_tag(:itemDate, :itemDate) %>

    <%= label_tag(:image, "Image: ") %>
    <%= file_field_tag(:image) %>
    <%= submit_tag("add item") %>
<% end %>
</div>
<% end %>